{
  "name": "pi-extension",
  "displayName": "Pi Coding Agent",
  "description": "VSCode extension for the Pi coding agent",
  "version": "0.1.6",
  "icon": "assets/icon.png",
  "publisher": "scutifer",
  "repository": {
    "type": "git",
    "url": "https://github.com/scutifer/pi-extension.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "type": "module",
  "main": "./dist/extension.cjs",
  "contributes": {
    "commands": [
      {
        "command": "pi.openChat",
        "title": "Pi: Open Chat"
      },
      {
        "command": "pi.resumeSession",
        "title": "Pi: Resume Session"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pi-chat",
          "title": "Pi",
          "icon": "assets/activitybar.svg"
        }
      ]
    },
    "views": {
      "pi-chat": [
        {
          "type": "webview",
          "id": "pi.chatView",
          "name": "Chat"
        }
      ]
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "package": "npx @vscode/vsce package"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.50.3",
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
